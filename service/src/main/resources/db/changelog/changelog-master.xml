<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="add-template-tables" author="gcastro12">
        <createTable tableName="template">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true"
                             primaryKeyName="pk_template_id"
                             nullable="false" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="description" type="varchar(1024)">
                <constraints nullable="true" />
            </column>
            <column name="group_key" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="date_created" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="date_updated" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="template_type">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true"
                             primaryKeyName="pk_template_type_id"
                             nullable="false" />
            </column>
            <column name="template_id" type="integer">
                <constraints foreignKeyName="fk_template_type_template_id"
                             references="template(id)"
                             nullable="false" />
            </column>
            <column name="type" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="provider" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="external_template_id" type="varchar(255)">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addUniqueConstraint tableName="template_type"
                             columnNames="template_id, type"
                             constraintName="u_template_type"/>
    </changeSet>
    <changeSet id="add-notification-log" author="gcastro12">
        <createTable tableName="notification_log">
            <column name="id" type="uuid">
                <constraints primaryKey="true"
                             primaryKeyName="pk_email_log_id"
                             nullable="false"/>
            </column>
            <column name="template_type_id" type="integer">
                <constraints foreignKeyName="fk_email_log_template_type"
                             references="template_type(id)"
                             nullable="true"/>
            </column>
            <column name="template_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="notification_type" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="recipient" type="varchar(320)">
                <constraints nullable="false"/>
            </column>
            <column name="disposition" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="date_received" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="date_sent" type="datetime">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>