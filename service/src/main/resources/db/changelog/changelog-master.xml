<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="email-layout-table" author="deibys.quintero">
        <createTable tableName="email_layout">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="key" type="varchar(1024)">
                <constraints nullable="false" />
            </column>
            <column name="name" type="varchar(1024)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="varchar(1024)">
                <constraints nullable="false" />
            </column>
            <column name="version" type="int">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="varchar(55)">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="createdby" type="VARCHAR(64)">
                <constraints nullable="true"/>
            </column>
            <column name="created_timestamp" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="last_updated_timestamp" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createTable tableName="email_layout_input">
            <column name="email_layout_id" type="uuid"  >
                <constraints nullable="false" foreignKeyName="fk_email_layout_input_email_layout_id" references="email_layout(id)"/>
            </column>
            <column name="input" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="email_layout_id, input"
                       constraintName="pk_email_layout_input"
                       tableName="email_layout_input"
                       validate="true" />
    </changeSet>
    <changeSet id="templates" author="deibys.quintero">
        <createTable tableName="template">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="key" type="varchar(1024)">
                <constraints nullable="false" />
            </column>
            <column name="version" type="int">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="varchar(55)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(1024)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="varchar(1024)">
                <constraints nullable="false" />
            </column>
            <column name="email_layout_key" type="varchar(1024)">
                <constraints nullable="false" />
            </column>
            <column name="createdby" type="VARCHAR(64)">
                <constraints nullable="true"/>
            </column>
            <column name="created_timestamp" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="last_updated_timestamp" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createTable tableName="template_parameter">
            <column name="template_id" type="uuid"  >
                <constraints nullable="false" foreignKeyName="fk_template_parameter_template_id" references="template(id)"/>
            </column>
            <column name="parameter_name" type="varchar(1024)">
                <constraints nullable="false" />
            </column>
            <column name="parameter_value" type="varchar(1024)">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addPrimaryKey columnNames="template_id, parameter_name"
                       constraintName="pk_template_parameter"
                       tableName="template_parameter"
                       validate="true" />
        <createTable tableName="template_value">
            <column name="template_id" type="uuid"  >
                <constraints nullable="false" foreignKeyName="fk_template_value_template_id" references="template(id)"/>
            </column>
            <column name="template_value_type" type="varchar(1024)">
                <constraints nullable="false" />
            </column>
            <column name="template_value_key" type="varchar(1024)">
                <constraints nullable="false" />
            </column>
            <column name="template_value_value" type="TEXT">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addPrimaryKey columnNames="template_id, template_value_type, template_value_key"
                       constraintName="pk_template_value"
                       tableName="template_value"
                       validate="true" />
    </changeSet>
</databaseChangeLog>